{
  "publisher": "yuhengshen",
  "name": "vscode-feeds",
  "displayName": "VS Code Feeds - Twitter/X",
  "description": "View Twitter/X feeds directly in VS Code with image, video support, comments, likes and bookmarks",
  "type": "module",
  "version": "0.0.6",
  "icon": "icons.png",
  "categories": [
    "Other"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/yuhengshen/vscode-feeds.git"
  },
  "license": "MIT",
  "homepage": "https://github.com/yuhengshen/vscode-feeds#readme",
  "bugs": {
    "url": "https://github.com/yuhengshen/vscode-feeds/issues"
  },
  "keywords": [
    "twitter",
    "x",
    "feeds",
    "vscode"
  ],
  "main": "./dist/extension.cjs",
  "engines": {
    "vscode": "^1.99.0"
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "contributes": {
    "commands": [
      {
        "command": "vscode-feeds.refreshTimeline",
        "title": "Refresh Timeline",
        "icon": "$(refresh)",
        "category": "Twitter Feeds"
      },
      {
        "command": "vscode-feeds.viewTweet",
        "title": "View Tweet Details",
        "icon": "$(eye)",
        "category": "Twitter Feeds"
      },
      {
        "command": "vscode-feeds.likeTweet",
        "title": "Like Tweet",
        "icon": "$(heart)",
        "category": "Twitter Feeds"
      },
      {
        "command": "vscode-feeds.unlikeTweet",
        "title": "Unlike Tweet",
        "icon": "$(heart-filled)",
        "category": "Twitter Feeds"
      },
      {
        "command": "vscode-feeds.openInBrowser",
        "title": "Open in Browser",
        "icon": "$(link-external)",
        "category": "Twitter Feeds"
      },
      {
        "command": "vscode-feeds.authenticate",
        "title": "Authenticate with Twitter",
        "icon": "$(key)",
        "category": "Twitter Feeds"
      },
      {
        "command": "vscode-feeds.logout",
        "title": "Logout from Twitter",
        "icon": "$(sign-out)",
        "category": "Twitter Feeds"
      },
      {
        "command": "vscode-feeds.loadMore",
        "title": "Load More Tweets",
        "icon": "$(arrow-down)",
        "category": "Twitter Feeds"
      },
      {
        "command": "vscode-feeds.switchToForYou",
        "title": "Switch to For You",
        "icon": "$(star)",
        "category": "Twitter Feeds"
      },
      {
        "command": "vscode-feeds.switchToFollowing",
        "title": "Switch to Following",
        "icon": "$(people)",
        "category": "Twitter Feeds"
      },
      {
        "command": "vscode-feeds.toggleTimelineType",
        "title": "Switch Timeline Type",
        "icon": "$(list-filter)",
        "category": "Twitter Feeds"
      },
      {
        "command": "vscode-feeds.copyTweetText",
        "title": "Copy Tweet Text",
        "icon": "$(copy)",
        "category": "Twitter Feeds"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "twitter-feeds",
          "title": "Twitter Feeds",
          "icon": "$(twitter)"
        }
      ]
    },
    "views": {
      "twitter-feeds": [
        {
          "id": "twitter-timeline",
          "name": "Timeline",
          "icon": "$(home)"
        },
        {
          "id": "twitter-bookmarks",
          "name": "Bookmarks",
          "icon": "$(bookmark)"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "vscode-feeds.toggleTimelineType",
          "when": "view == twitter-timeline",
          "group": "navigation"
        },
        {
          "command": "vscode-feeds.refreshTimeline",
          "when": "view == twitter-timeline || view == twitter-bookmarks",
          "group": "navigation"
        },
        {
          "command": "vscode-feeds.authenticate",
          "when": "view == twitter-timeline && !vscode-feeds.isAuthenticated"
        },
        {
          "command": "vscode-feeds.logout",
          "when": "view == twitter-timeline && vscode-feeds.isAuthenticated"
        }
      ],
      "view/item/context": [
        {
          "command": "vscode-feeds.viewTweet",
          "when": "view == twitter-timeline || view == twitter-bookmarks",
          "group": "inline@1"
        },
        {
          "command": "vscode-feeds.likeTweet",
          "when": "(view == twitter-timeline || view == twitter-bookmarks) && viewItem == tweet-unliked",
          "group": "inline@2"
        },
        {
          "command": "vscode-feeds.unlikeTweet",
          "when": "(view == twitter-timeline || view == twitter-bookmarks) && viewItem == tweet-liked",
          "group": "inline@2"
        },
        {
          "command": "vscode-feeds.openInBrowser",
          "when": "view == twitter-timeline || view == twitter-bookmarks",
          "group": "navigation"
        },
        {
          "command": "vscode-feeds.copyTweetText",
          "when": "view == twitter-timeline || view == twitter-bookmarks",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "title": "X (Twitter) Feeds",
      "properties": {
        "vscode-feeds.twitter.ct0": {
          "type": "string",
          "default": "",
          "description": "X Web ct0 Cookie (CSRF token) - Get from browser DevTools"
        },
        "vscode-feeds.twitter.authToken": {
          "type": "string",
          "default": "",
          "description": "X Web auth_token Cookie - Get from browser DevTools"
        }
      }
    }
  },
  "scripts": {
    "build": "tsdown --env.NODE_ENV production",
    "dev": "tsdown --watch ./src --env.NODE_ENV development",
    "typecheck": "tsc --noEmit",
    "vscode:prepublish": "pnpm run build"
  },
  "devDependencies": {
    "@types/node": "22.x",
    "@types/vscode": "^1.99.0",
    "@types/vscode-webview": "^1.57.5",
    "@vscode/vsce": "^3.7.1",
    "ovsx": "^0.10.7",
    "reactive-vscode": "^0.4.1",
    "tsdown": "^0.16.8",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "lit-html": "^3.3.1"
  }
}
